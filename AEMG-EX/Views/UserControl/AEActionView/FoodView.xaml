<UserControl x:Class="AEMG_EX.FoodView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AEMG_EX"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="800" Height="450" x:Name="MainGrid" >
        <Grid.Background>
            <ImageBrush ImageSource="{StaticResource FoodScreen}"/>
        </Grid.Background>
        <Button Style="{StaticResource ImageButton}" Tag="{StaticResource BackAE}" Width="100" Height="42" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Top"
                Command="{Binding BackCommand}" ToolTip="Not to Eat Food"/>
        <Image Visibility="{Binding EatOrNotToEat, Converter={local:BooleanToVisibilityConverter}, ConverterParameter=reverse}">
            <Image.Style>
                <Style TargetType="{x:Type Image}">
                    <Setter Property="Source" Value="{StaticResource FoodDialog_Ask}"/>
                    <Setter Property="Width" Value="500"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ElementName=NoButton, Path=IsMouseOver}" Value="True">
                            <Setter Property="Source" Value="{StaticResource FoodDialog_No}"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ElementName=YesButton, Path=IsMouseOver}" Value="True">
                            <Setter Property="Source" Value="{StaticResource FoodDialog_Yes}"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Image.Style>
        </Image>
        
        <local:CutCornerBox Text="HP and MP completely restored." Margin="10" VerticalAlignment="Top" Visibility="{Binding EatOrNotToEat, Converter={local:BooleanToVisibilityConverter}}"/>

        <Canvas Visibility="{Binding EatOrNotToEat, Converter={local:BooleanToVisibilityConverter}, ConverterParameter=reverse}">
            <Button x:Name="NoButton" Style="{StaticResource EmptyButton}" Canvas.Left="235" Canvas.Top="240" Width="155" Height="52" Background="Transparent" 
                    ToolTip="This actually does nothing"/>
            <Button x:Name="YesButton" Style="{StaticResource EmptyButton}" Canvas.Left="410" Canvas.Top="240" Width="155" Height="52" Background="Transparent"
                    Command="{Binding UseCommand}" ToolTip="Eat Food"/>
        </Canvas>

    </Grid>
    
</UserControl>
