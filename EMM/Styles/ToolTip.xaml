<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:EMM">

    <Style TargetType="{x:Type ToolTip}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToolTip}">
                    <Border Background="AliceBlue" CornerRadius="4" BorderThickness="1" BorderBrush="{StaticResource BorderLightBrush}" MinWidth="100">
                        <StackPanel Margin="3">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{StaticResource AboutButton}" Margin="3"/>
                                <TextBlock Text="Tips" FontSize="16" FontWeight="Bold" />
                            </StackPanel>
                            <Separator/>
                            <ContentPresenter VerticalAlignment="Top" HorizontalAlignment="Left"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>